{% extends "base.html.j2" %}
{% block content %}
{% from "macros/user_macros.html.j2" import user_display%}

<div class="container mt-5">

  <!-- User Profile Information Card -->
  <div class="card col-lg-8 mx-auto">
    <div class="row g-0 align-items-center">
      <div class="col-md-12">
        <div class="card-body">
          <h2 class="card-title">{{ user_display(user.username) }}</h2>
          <p class="card-text text-muted mb-3">
            <strong>Location:</strong> {{ user.location or "N/A" }}<br>
            <strong>Birthdate:</strong> {{ user.birthdate or "N/A" }}<br>
            <strong>Joined:</strong> {{ user.created_at|datetimeformat }}
          </p>
          <p class="card-text">{{ user.profile or "No profile information provided." }}</p>

         {% if session.user_id and session.user_id != user.id %}
            <div class="my-3">
              {# The logic is now a simple boolean check #}
              {% if is_following %}
                <form action="{{ url_for('unfollow_user', user_id=user.id) }}" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-secondary">Unfollow</button>
                </form>
              {% else %}
                <form action="{{ url_for('follow_user', user_id=user.id) }}" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-primary">Follow</button>
                </form>
              {% endif %}
              <div></div>
              <!-- User Rating -->
              <form action="{{ url_for('rate_user', user_id=user.id) }}" method="POST" class="d-inline ms-3">
                <div class="rating d-flex align-items-center">
                  <input type="radio" name="rating" id="rate1" value="1" class="btn-check"
                        {% if user_rating == 1 %}checked{% endif %}>
                  <label for="rate1" class="btn btn-outline-danger btn-sm me-1">1</label>

                  <input type="radio" name="rating" id="rate2" value="2" class="btn-check"
                        {% if user_rating == 2 %}checked{% endif %}>
                  <label for="rate2" class="btn btn-outline-danger btn-sm me-1">2</label>

                  <input type="radio" name="rating" id="rate3" value="3" class="btn-check"
                        {% if user_rating == 3 %}checked{% endif %}>
                  <label for="rate3" class="btn btn-outline-warning btn-sm me-1">3</label>

                  <input type="radio" name="rating" id="rate4" value="4" class="btn-check"
                        {% if user_rating == 4 %}checked{% endif %}>
                  <label for="rate4" class="btn btn-outline-success btn-sm me-1">4</label>

                  <input type="radio" name="rating" id="rate5" value="5" class="btn-check"
                        {% if user_rating == 5 %}checked{% endif %}>
                  <label for="rate5" class="btn btn-outline-success btn-sm me-1">5</label>

                  <button type="submit" class="btn btn-sm btn-success ms-2">Rate</button>
                </div>
              </form>
            </div>
          {% endif %}

          <div class="mt-4 d-flex">
            <div class="me-4">
              <a href="/u/{{ user.username }}/followers" class="text-decoration-none text-dark">
                <strong>{{ followers_count }}</strong> Followers
              </a>
            </div>
            <div>
              <a href="/u/{{ user.username }}/following" class="text-decoration-none text-dark">
                <strong>{{ following_count }}</strong> Following
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h3 class="text-center border-bottom pb-2 my-5"><span>Latest Posts</span></h3>

  <div class="row g-3">
    {% for post in posts %}
    <div class="col-md-6">
      <div class="card h-100 shadow-sm card-hover">
        <a href="{{ url_for('post_detail', post_id=post.id) }}" class="text-decoration-none text-reset">
          <div class="card-body">
            <p class="card-text">{{ post.content|truncate(100, True, '...') }}</p>
            <small class="text-muted">Posted on {{ post.created_at|datetimeformat }}</small>
          </div>
        </a>
      </div>
    </div>
    {% else %}
    <div class="col-12">
      <p class="text-center text-muted">No posts yet.</p>
    </div>
    {% endfor %}
  </div>

  <!-- User's Latest Comments Section -->
  <h3 class="text-center border-bottom pb-2 my-5"><span>Latest Comments</span></h3>

  <div class="row g-3">
    {% for comment in comments %}
    <div class="col-md-6">
      <div class="card h-100 shadow-sm card-hover">
        <!-- The link now goes to the post the comment is on -->
        <a href="{{ url_for('post_detail', post_id=comment.post_id) }}" class="text-decoration-none text-reset">
          <div class="card-body">
            <!-- Display the comment content -->
            <p class="card-text">{{ comment.content|truncate(100, True, '...') }}</p>
            <!-- Updated text to show it's a comment -->
            <small class="text-muted">Commented on {{ comment.created_at|datetimeformat }}</small>
          </div>
        </a>
      </div>
    </div>
    {% else %}
    <div class="col-12">
      <p class="text-center text-muted">No comments yet.</p>
    </div>
    {% endfor %}
  </div>

</div>
{% endblock %}
